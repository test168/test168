<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="10dp" />
            <solid android:color="@color/light_gray2" />
            <stroke android:width="2dp" android:color="@color/light_gray2" android:dashGap="0dp" android:dashWidth="1dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <corners android:radius="10dp" />
            <solid android:color="@color/light_gray2" />
            <stroke android:width="1dp" android:color="@color/light_gray2" android:dashGap="0dp" android:dashWidth="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="10dp" />
            <solid android:color="@color/light_gray" />
            <stroke android:width="1dp" android:color="@color/light_gray2" android:dashGap="0dp" android:dashWidth="1dp" />
        </shape>
    </item>
</selector>
