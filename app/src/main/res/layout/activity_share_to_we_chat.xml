<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.test.test168.activity.ShareToWeChatActivity">

    <Button
        android:id="@+id/btn_request_permissions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" request permissions " />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="input share to wechat text">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_share_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="默认输入 " />

    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_share_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_share_to_wechat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" share 9 picture to wechat " />


</android.support.v7.widget.LinearLayoutCompat>
